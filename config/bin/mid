#!/usr/bin/env bash
#
# Operates all middlewares transparency

set -eu
set -o pipefail

usage() {
  cat <<EOF
$(basename ${0}) - Operates all middlewares transparency

Usage:
    $(basename ${0}) <MIDDLEWARE> [command]

Available Midlewares:
    pg        (PostgreSQL)
    redis     (Redis)
    datastore (Google Cloud Datastore)
EOF
}

COMMAND="${1:-}"
shift || true

if [ -z "$COMMAND" ]; then
  usage
  exit 0
fi

case $COMMAND in
  pg|redis|datastore)
    mid-$COMMAND "$@"
    exit 0
  ;;

  --version|-v)
    version
    exit 0
  ;;

  --help|-h)
    usage
    exit 0
  ;;

  *)
    printutil error "Unknown command: $COMMAND"
    usage
    exit 1
  ;;
esac
