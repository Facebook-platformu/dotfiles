#!/usr/bin/env bash

set -euo pipefail

cd $(dirname $0)/..

apt update
apt install -y \
	bat \
	fzf \
	ripgrep \
	tig

curl -sS https://starship.rs/install.sh | sh -s -- -y

curl --proto '=https' -fLsS https://rossmacarthur.github.io/install/crate.sh |
	bash -s -- --repo rossmacarthur/sheldon --to ~/.local/bin
