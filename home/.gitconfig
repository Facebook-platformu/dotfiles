[user]
	name = izumin5210
	email = masayuki@izumin.info
[core]
	autocrlf = input
	editor = vim
[color]
	ui = true
[github]
	user = izumin5210
[alias]
    co = checkout
    cb = checkout -b
    st = git-st
    sta = git-sta
    std = git-std
    ste = git-str
    ste = git-ste
    logg = log --stat --pretty=format:'%C(yellow)%h %C(cyan)%ar %C(magenta)%an%n%C(white)%s %Cred%d'
    graph = log --graph --decorate --oneline

[push]
	default = simple
[credential]
	helper = osxkeychain
[filter "lfs"]
	clean = git lfs clean %f
	smudge = git lfs smudge %f
	required = true
